@model IEnumerable<Evacuation.Web.Models.ProjectModel>

@{
    ViewBag.Title = "Projects";
}
<h2>Projects</h2>
<p>
    @Html.ActionLink("Create New", "CreateProject")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCreation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataStrart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataEnd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCreation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataStrart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEnd)
            </td>
            <td>
                @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(item.Image) + "\" />")
            </td>
            <td>
                @Html.ActionLink("Edit", "EditProject", new { id = item.ProjectID }) |
                @Html.ActionLink("Delete", "DeleteProject", new { id = item.ProjectID })
            </td>
        </tr>
    }
</table>

